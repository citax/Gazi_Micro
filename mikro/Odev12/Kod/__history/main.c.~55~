#include <main.h>

#fuses XT, NOWDT,NOPROTECT
#use delay(clock=4000000)
#include <lcd420.c> 
#define ileri1 pin_a0
#define geri1 pin_a1
#define ileri2 pin_a2
#define geri2 pin_a3
#define in1   pin_d0
#define in2   pin_d1
#define in3   pin_d4
#define in4   pin_d5

void lcd_clear_line(int8 line)
{
   switch (line)
   {
      case 1:
         lcd_send(LCD_LINE1, 0);  // 1. satýrýn baþýna git
         break;
      case 2:
         lcd_send(LCD_LINE2, 0);  // 2. satýrýn baþýna git
         break;
      case 3:
         lcd_send(LCD_LINE3, 0);  // 3. satýrýn baþýna git
         break;
      case 4:
         lcd_send(LCD_LINE4, 0);  // 4. satýrýn baþýna git
         break;
      default:
         break;
   }

   for (int i = 0; i < 16; i++)
   {
      lcd_send(' ', 1);  // Satýrý boþluk karakteri ile doldur
   }
}


void main()
{
   set_tris_a(0xFF);
   set_tris_b(0x00);
   set_tris_d(0x00);
   output_b(0x00);
   output_d(0x00);
   lcd_init();
   
    
   while(TRUE)
   {
  
          
         if(input(ileri1))
         { 
           output_high(pin_d2);
           output_low(pin_d3);
           output_high(in1);
           output_low(in2);
           lcd_gotoxy(1,1);
           printf(lcd_putc, "1.motor ileri");
           delay_ms(1000);
         }
         
         
          if(input(geri1))
         { 
           output_high(pin_d2);
           output_low(pin_d3);
           output_low(in1);
           output_high(in2);
           lcd_gotoxy(1,2);
           printf(lcd_putc, "1.motor geri");
           delay_ms(1000);
         }
         
         
         
        if(input(ileri2))
         { 
           output_high(pin_d3);
           output_low(pin_d2);
           output_high(in3);
           output_low(in4);
           lcd_gotoxy(1,3);
           printf(lcd_putc,"2.motor ileri");
           delay_ms(1000);
         }
         
         
          if(input(geri2))
         { 
           output_high(pin_d3);
           output_low(pin_d2);
           output_low(in3);
           output_high(in4);
           lcd_gotoxy(1,4);
           lcd_clear_line();
           printf(lcd_putc,"2.motor geri");
           delay_ms(1000);
         }

}
}

