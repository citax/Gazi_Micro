#include <16f877A.h>
#fuses HS,NOWDT,NOPROTECT
#use delay(clock=4000000)

#define buton_1 pin_A0
#define buton_2 pin_A1

const int digit[4]={0x03, 0x06, 0x0C, 0x09};
int k,i, adim=0;
int ileri, geri;

void buton()
{
   if(input(buton_1)) //ileri butonu
   {
      ileri = 1; 
      geri = 0;
   }
   
   if(input(buton_2)) //ileri butonu
   {
      ileri = 0; 
      geri = 1;
   }

}

void main()
{
   set_tris_a(0xff);
   set_tris_c(0x00); 
   output_c(0x00); 
   
while(1)
{ 
   buton();
   
   while(ileri == 1 && geri == 0)
   {
      for(i=0; i=2; i++)
      {
         for(k=0; k=4; k++)  //90 derece oldugundan 4 kere donmeli
         {
            if(adim == 4)
            adim=0;
            output_c(digit[adim]);
            adim++;
            buton();
            if(geri == 1 && ileri == 0)
            break;
         }
         if(geri == 1 && ileri == 0)
         break;
      }
   }
   
 
}

}


