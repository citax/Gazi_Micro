#include <CITAK.h>
#fuses HS, NOWDT, NOPROTECT 
#use delay(clock=4000000)

#define pin_plus pin_A0
#define pin_minus pin_A1
#define pin_stop  pin_A2

int number = 0;

void main()
{  
   set_tris_a(0xFF);
   set_tris_b(0x00);
   output_b(0x00);
   while(TRUE)
   {
      if(input(pin_plus))
      {
         number++;
         
         
         
      
      }
      
      
   }

}
