
#include <16f877a.h>
#device ADC=10  
#fuses XT,NOWDT,NOPROTECT,NOBROWNOUT,NOLVP,NOPUT,NOWRT,NODEBUG,NOCPD
#use delay (clock=4000000)
#use fast_io(a)
#define use_portb_lcd TRUE
#include <lcd.c>

unsigned long int bilgi; 
float voltaj,sicaklik,sicaklik1;

void main()
{
   set_tris_a(0xFF);  
   set_tris_b(0x00);  
   set_tris_d(0x00);
   
   setup_adc(adc_clock_div_32);  
   setup_adc_ports(AN0);

   lcd_init(); 

   set_adc_channel(0);  
   delay_us(20); 
   
   
   delay_ms(500);
   while(1)  
   {
      bilgi=read_adc(); 
      voltaj=(0.0048828125*bilgi);

      sicaklik=(voltaj*100); 
      if(sicaklik != sicaklik1){
      printf(lcd_putc,"\fSicaklik="); 
      printf(lcd_putc,"%5.1f'C",sicaklik); 
      delay_ms(100);  
      
      if(22<sicaklik && sicaklik<25)
      {  
         printf(lcd_putc,"\n1.KADEME SOGUTMA");
         output_high(pin_D1);
         output_low(pin_D2);
         output_low(pin_D3);
         delay_ms(100);
      }
      if(25<sicaklik && sicaklik<28)
      {
         printf(lcd_putc,"\n2.KADEME SOGUTMA");
         output_high(pin_D2);
         output_low(pin_D1);
         output_low(pin_D3);
         delay_ms(100);
      }
      if(28<sicaklik && sicaklik<31)
      {
         printf(lcd_putc,"\n3.KADEME SOGUTMA");
         output_high(pin_D3);
         output_low(pin_D2);
         output_low(pin_D1);
         delay_ms(100);
      }}
      sicaklik1= sicaklik;
   }

}
